        var customInt2 = row.find('#CustomInt2').val();
        var customInt3 = row.find('#CustomInt3').val();
        var customText1 = row.find('#CustomText1').val();
        var customText2 = row.find('#CustomText2').val();
        var customText3 = row.find('#CustomText3').val();
